<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Confiteria</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Confiteria.styles.css" asp-append-version="true" />
	<link href="~/lib/font-awesome/css/all.css" rel="stylesheet" />
	<link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
</head>
<body>
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-info border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a href="index3.html" class="brand-link">
					<img src="~/imagen/logo2.png" class="brand-image elevation-3" style="width:100px;" />
				</a>
				<a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index"><i class="fa-solid fa-basket-shopping"></i> Confiteria</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						@*  <li class="nav-item">
						<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
						<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>*@
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="Clientes" asp-action="Index">Clientes</a>
						</li>
						@if (User.IsInRole("Admin"))
						{
							<li class="nav-item">
								<a class="nav-link text-white" asp-area="" asp-controller="Productos" asp-action="Index">Productos</a>
							</li>
						}

						@* <li class="nav-item">
						<a class="nav-link text-white" asp-area="" asp-controller="Proveedors" asp-action="Index">Proveedores</a>
						</li> *@
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="Facturacion" asp-action="Index">Facturacion</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="TasaDolars" asp-action="Index">TasaDolar</a>
						</li>
					</ul>
					<partial name="_LoginPartial" />
				</div>
			</div>
		</nav>
	</header>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2023 - Confiteria - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
			Desarrollado por :  <img src="~/imagen/logo the watson enterprise 2020 con rif.png" style="width:15%;" />
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/jquery.formatcurrency-1.4.0.js"></script>
	<script src="~/lib/font-awesome/js/fontawesome.js"></script>
	<script src="~/lib/font-awesome/js/fontawesome.min.js"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
