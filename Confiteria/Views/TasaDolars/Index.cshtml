@model ArquitecturaModel.Model.TasaDolar
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-action="Index">
    <input type="hidden" asp-for="Id" />
    <div class="col-md-6">
        <div class="form-group">
            <label asp-for="Tasa" class="control-label"></label>
            <input asp-for="Tasa" class="form-control" />
            <span asp-validation-for="Tasa" class="text-danger"></span>
        </div>
    </div>
    <div class="card-footer">
        <input type="submit" id="UpdateProductos" value="Guardar" class="btn btn-primary"  />
        <button type="button" class="btn btn-secondary" onclick="Update();">Actualizar</button>

    </div>
</form>
@section scripts{
    <script>
        jQuery(document).ready(function () {
            
        });
        function Update() { 
            $.ajax({
                url: '/TasaDolars/UpdatePrecio',
                type: "post",
                dataType: "json",
                success: function (data) {
                    if (data)
                        alert('Se ha actualizado los precios.')
                    else
                        alert('Error al actualizar los precios.');
                }
            });
        }
    </script>
    
}