@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<h1>@ViewData["Title"]</h1>
<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
	<div class="card card-primary">
		<div class="card-header">
			<h3 class="card-title">Usuarios</h3>
		</div>
		<div class="card-body">
			<h4>Crear Nuevo Usuario</h4>
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="row">
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="Input.Nombre"></label>
						<input asp-for="Input.Nombre" class="form-control txt" id="txtNombre" />
						<span asp-validation-for="Input.Nombre" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="Input.Apellido"></label>
						<input asp-for="Input.Apellido" class="form-control" />
						<span asp-validation-for="Input.Apellido" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-12">
					<div class="form-group">
						<label asp-for="Input.Direccion"></label>
						<input asp-for="Input.Direccion" class="form-control" />
						<span asp-validation-for="Input.Direccion" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-12">
					<div class="form-group">
						<label asp-for="Input.Telefono" class="control-label"></label>
						<input asp-for="Input.Telefono" class="form-control txtn" />
						<span asp-validation-for="Input.Telefono" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-12">
					<div class="form-group">
						<label asp-for="Input.Email"></label>
						<input asp-for="Input.Email" class="form-control" />
						<span asp-validation-for="Input.Email" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group ">
						<label asp-for="Input.Password"></label>
						<input asp-for="Input.Password" class="form-control" />
						<span asp-validation-for="Input.Password" class="text-danger"></span>
					</div>
				</div>
				<div class="col-md-6">
					<div class="form-group">
						<label asp-for="Input.ConfirmPassword"></label>
						<input asp-for="Input.ConfirmPassword" class="form-control" />
						<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
					</div>
				</div>
			</div>

			<div class="card-footer">
				<button type="submit" class="btn btn-primary">Registrar</button>
			</div>
		</div>
	</div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
